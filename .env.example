# Minimal OpenClaw Environment Configuration
# Copy to .env and configure for your deployment

# =============================================================================
# REQUIRED - Set by EasyClaw Backend
# These are automatically injected when deployed via the EasyClaw backend
# =============================================================================

# Port for OpenClaw gateway (allocated by PortAllocationService)
OPENCLAW_GATEWAY_PORT=18789

# Authentication token (generated by backend)
OPENCLAW_GATEWAY_TOKEN=your_secure_token_here

# Container identification
CONTAINER_ID=your-container-uuid
CONTAINER_NAME=openclaw-app

# =============================================================================
# REQUIRED - User Provided
# At least ONE AI provider API key is required
# =============================================================================

# Primary: OpenAI
OPENAI_API_KEY=sk-your_openai_key_here

# Alternative AI providers (provide what you have)
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
MINIMAX_API_KEY=
KIMI_API_KEY=
OPENCODE_API_KEY=
MOONSHOT_API_KEY=

# =============================================================================
# OPTIONAL - Provide what you have, leave blank if not needed
# =============================================================================

# Telegram bot for chat interface
TELEGRAM_BOT_TOKEN=

# Optional integrations
ELEVENLABS_API_KEY=
GOOGLE_MAPS_API_KEY=

# Optional deployment tools
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_EMAIL=

# Optional public access (Cloudflare tunnel)
CF_TUNNEL_TOKEN=

# Custom paths (defaults usually fine)
# OPENCLAW_STATE_DIR=/data/.openclaw
# OPENCLAW_WORKSPACE=/data/openclaw-workspace
# OPENCLAW_GATEWAY_BIND=lan

# Node environment (production recommended)
NODE_ENV=production
